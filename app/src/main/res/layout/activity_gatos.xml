            <Button
                android:id="@+id/eg4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ECCDCD"
                android:textColor="#6A5454"
                android:text="@string/eg4" />

            <Button
                android:id="@+id/eg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ECCDCD"
                android:textColor="#6A5454"
                android:text="@string/eg5" />

            <Button
                android:id="@+id/eg6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ECCDCD"
                android:textColor="#6A5454"
