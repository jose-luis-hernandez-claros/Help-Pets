<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idfechavacunacion2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFB9B9"
    tools:context=".vacunas">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="541dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="60dp"
        android:background="#CFB9B9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:fontFamily="cursive"
            android:text="@string/registrovacunas"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ididentificacionvacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/codigomascota"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#633838"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/idnombremascota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombremascota2"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#5C4545" />

        <TextView
            android:id="@+id/idtipomascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/tipomascota2"
            android:textAlignment="viewStart"
            android:textColor="#5C4545"
            android:textColorHint="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnertipomascota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sexomascota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/sexomascota2"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#5C4545" />

        <Spinner
            android:id="@+id/spinnersexomascota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/idfechanacimiento2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/fechanacimiento2"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textColorHint="#5C4545" />

        <EditText
            android:id="@+id/idnombrevacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombrevacuna"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#5C4545" />

        <EditText
            android:id="@+id/idfechavacunacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/fechavacunacion"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textColorHint="#5C4545" />

    </LinearLayout>

    <TableLayout
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="72dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="69dp">

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button10"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="2"
        android:fontFamily="casual"
        android:onClick="registrar"
        android:text="@string/agregarv" />

</RelativeLayout>