<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECCDCD"
    tools:context=".registromascotas">

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="522dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="80dp"
        android:background="#ECCDCD"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:fontFamily="cursive"
            android:text="@string/registromascotas2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#6A5454"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ididentificacionmascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/codigomascota"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="#6A5454"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#633838"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/idnombremascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombremascota"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="#6A5454"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#633838"
            android:textColorLink="#FFFFFF" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/tipomascota"
            android:textAlignment="viewStart"
            android:textColor="#6A5454"
            android:textColorLink="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnertipomascota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/sexomascota"
            android:textAlignment="textStart"
            android:textColor="#6A5454"
            android:textColorHint="#5C4545" />

        <Spinner
            android:id="@+id/spinnersexomascota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/idfechanacimientomascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/fechanacimiento"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textColor="#6A5454"
            android:textColorHint="#5C4545" />

        <EditText
            android:id="@+id/idrazamascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/razamascota"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="#6A5454"
            android:textColorHint="#5C4545" />

    </LinearLayout>

    <Button
        android:id="@+id/button10"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="63dp"
        android:layout_weight="2"
        android:fontFamily="casual"
        android:onClick="registrar"
        android:text="@string/agregarv"
        android:textColor="#6A5454" />

</RelativeLayout>