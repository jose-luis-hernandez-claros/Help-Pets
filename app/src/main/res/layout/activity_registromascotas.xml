<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFB9B9"
    tools:context=".registromascotas">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="449dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="153dp"
        android:background="#CFB9B9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:fontFamily="cursive"
            android:text="@string/registromascotas2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ididentificacionmascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/codigomascota"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#633838"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/idnombremascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombremascota"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#633838"
            android:textColorLink="#FFFFFF" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/tipomascota"
            android:textAlignment="viewStart"
            android:textColor="#5C4545"
            android:textColorLink="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnertipomascota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/sexomascota"
            android:textAlignment="textStart"
            android:textColor="#5C4545"
            android:textColorHint="#5C4545" />

        <Spinner
            android:id="@+id/spinnersexomascota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/idfechanacimientomascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/fechanacimiento"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textColorHint="#5C4545" />

        <EditText
            android:id="@+id/idrazamascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/razamascota"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#5C4545" />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="41dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="casual"
                android:onClick="registrar"
                android:text="@string/agregarv" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="casual"
                android:onClick="modificar"
                android:text="@string/modificarma" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="casual"
                android:onClick="eliminar"
                android:text="@string/eliminarma" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="casual"
                android:onClick="consultar"
                android:text="@string/buscarma" />
        </TableRow>

    </TableLayout>

</RelativeLayout>