<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFB9B9"
    tools:context=".perros">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="@string/enfperros"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ep1"
                android:text="@string/ep1" />

            <Button
                android:id="@+id/ep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ep2"
                android:text="@string/ep2" />

            <Button
                android:id="@+id/ep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep3" />

            <Button
                android:id="@+id/ep4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep4" />

            <Button
                android:id="@+id/ep5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep5" />

            <Button
                android:id="@+id/ep6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep6" />

            <Button
                android:id="@+id/ep7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep7" />

            <Button
                android:id="@+id/ep8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep8" />

            <Button
                android:id="@+id/ep9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep9" />

            <Button
                android:id="@+id/ep10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep10" />

            <Button
                android:id="@+id/ep11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep11" />

            <Button
                android:id="@+id/ep12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep12" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/p1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/p2"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep21"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ep22"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>